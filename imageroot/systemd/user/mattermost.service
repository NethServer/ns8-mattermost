#
# This systemd unit starts a mattermost instance using Podman.
# Most parts of this file come from podman-generate-systemd.
#
[Unit]
Description=mattermost server

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
EnvironmentFile=%S/state/environment
WorkingDirectory=%S/state
Restart=always
ExecStartPre=/bin/rm -f %t/mattermost.pid %t/mattermost.ctr-id
ExecStart=/usr/bin/podman run \
    --detach \
    --conmon-pidfile=%t/mattermost.pid \
    --cidfile=%t/mattermost.ctr-id \
    --cgroups=no-conmon \
    --replace --name=%N \
    --publish=127.0.0.1:${TCP_PORT}:8080 \
    ${ECHO_SERVER_IMAGE}
ExecStop=/usr/bin/podman stop --ignore --cidfile %t/mattermost.ctr-id -t 10
ExecStopPost=/usr/bin/podman rm --ignore -f --cidfile %t/mattermost.ctr-id
PIDFile=%t/mattermost.pid
Type=forking

[Install]
WantedBy=default.target
