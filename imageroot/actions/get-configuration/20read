import os
import json
import sys
import agent

# Prepare return variable
config = {}

config["host"] =  os.environ.get("TRAEFIK_HOST", "");
config["http2https"] =  os.environ.get("TRAEFIK_HTTP2HTTPS") == "True";
config["lets_encrypt"] =  agent.get_route(os.environ['MODULE_ID']).get('lets_encrypt', False);

# Dump the configuratio to stdout
json.dump(config, fp=sys.stdout)
